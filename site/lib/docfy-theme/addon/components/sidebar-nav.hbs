<button
  type="button"
  class="flex items-center px-4 py-2 border rounded lg:hidden dark:border-green-800
  {{if this.isOpen "bg-green-200 dark:bg-green-1000"}}"
  {{on "click" this.toggle}}
>
  <svg class="w-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
    <path
      d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h6a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
      clip-rule="evenodd"
      fill-rule="evenodd"
    ></path>
  </svg>

  Contents
</button>

<div
  class="lg:mt-0 lg:overflow-y-auto lg:sticky top-16 lg:max-h-(screen-16) pt-4 lg:pt-12 pb-4 lg:-mt-12 lg:block
  {{if this.isOpen "block" "hidden"}}
  "
>
  {{! template-lint-disable no-invalid-interactive }}
  <ul class="space-y-2" {{on "click" this.handleSidebarClick}}>
    {{! template-lint-enable no-invalid-interactive }}
    {{#each @node.pages as |page|}}
      <li>
        <DocfyLink
          @to={{page.url}}
          class="pl-2 py-1 hover:text-green-800 dark-hover:text-green-500 text-sm block rounded hover:bg-green-100"
          @activeClass="text-green-800 dark:text-green-500 bg-green-100"
        >
          {{page.title}}
        </DocfyLink>
      </li>
    {{/each}}

    {{#each @node.children as |child|}}
      <li>
        <div class="pt-2 pl-2 pb-2 text-xs text-green-700">
          {{child.label}}
        </div>

        <ul class="space-y-2">
          {{#each child.pages as |page|}}
            <li class="truncate">
              <DocfyLink
                @to={{page.url}}
                class="pl-6 py-1 hover:text-green-800 dark-hover:text-green-500 text-sm block rounded hover:bg-green-100"
                @activeClass="text-green-800 dark:text-green-500 bg-green-100"
              >
                {{page.title}}
              </DocfyLink>
            </li>
          {{/each}}

          {{#each child.children as |subChild|}}
            <li>
              <div class="pl-6 pt-2 pb-2 text-xs text-green-700">
                {{subChild.label}}
              </div>

              <ul class="space-y-2">
                {{#each subChild.pages as |page|}}
                  <li class="truncate">
                    <DocfyLink
                      @to={{page.url}}
                      class="pl-10 py-1 hover:text-green-800 dark-hover:text-green-500 text-sm block rounded hover:bg-green-100"
                      @activeClass="text-green-800 dark:text-green-500 bg-green-100"
                    >
                      {{page.title}}
                    </DocfyLink>
                  </li>
                {{/each}}
              </ul>
            </li>
          {{/each}}
        </ul>
      </li>
    {{/each}}
  </ul>
</div>